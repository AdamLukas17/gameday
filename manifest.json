{
    "name": "Gameday",
    "description": "Shows when your favorite teams are playing.",
    "version": "1.0",
    "manifest_version": 3,
    "host_permissions": [
      "*://stats.nba.com/*"
    ],
    "action": {
      "default_popup": "hello.html",
      "default_icon": {
        "16": "basketball-nogame.png",
        "48": "basketball-nogame.png",
        "128": "basketball-nogame.png"
      },
      "default_title": "Gameday"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  